{
  "dashboard": {
    "title": "WekaDocs GraphRAG MCP - Overview",
    "tags": ["wekadocs", "mcp", "overview"],
    "timezone": "utc",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}} ({{status}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "requests/sec", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Latency (P50, P95, P99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"label": "seconds", "format": "s"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [2.0], "type": "gt"},
              "query": {"params": ["C", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "name": "HTTP P99 Latency Alert",
          "message": "P99 latency exceeded 2s threshold"
        }
      },
      {
        "id": 3,
        "title": "MCP Tool Call Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(mcp_tool_calls_total[5m])",
            "legendFormat": "{{tool_name}} ({{status}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "calls/sec", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "MCP Tool Latency by Tool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(mcp_tool_duration_seconds_bucket[5m]))",
            "legendFormat": "{{tool_name}} (P95)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "seconds", "format": "s"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "cache_hit_rate",
            "legendFormat": "{{layer}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "hit rate", "format": "percentunit", "min": 0, "max": 1},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 0.8, "colorMode": "critical", "op": "lt", "fill": true, "line": true}
        ]
      },
      {
        "id": 6,
        "title": "Cache Operations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(cache_operations_total{result='hit'}[5m])",
            "legendFormat": "{{layer}} hits",
            "refId": "A"
          },
          {
            "expr": "rate(cache_operations_total{result='miss'}[5m])",
            "legendFormat": "{{layer}} misses",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"label": "ops/sec", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~'5..'}[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "errors/sec", "format": "short"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.01], "type": "gt"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "name": "Error Rate Alert",
          "message": "Error rate exceeded 1% threshold"
        }
      },
      {
        "id": 8,
        "title": "Service Info",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "wekadocs_mcp_info",
            "format": "table",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
